<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity repository-class="Pucene\Bundle\DoctrineBundle\Repository\MappingRepository"
            name="Pucene\Bundle\DoctrineBundle\Entity\Mapping"
            table="pu_mapping">
        <unique-constraints>
            <unique-constraint columns="index_id,name"/>
        </unique-constraints>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="name" type="string" column="name" length="255" unique="true"/>

        <one-to-many field="fields"
                     target-entity="Pucene\Bundle\DoctrineBundle\Entity\Field"
                     mapped-by="mapping"
                     fetch="EXTRA_LAZY">
            <cascade>
                <cascade-remove />
            </cascade>
        </one-to-many>

        <many-to-one field="index" target-entity="Pucene\Bundle\DoctrineBundle\Entity\Index">
            <join-columns>
                <join-column name="index_id" referenced-column-name="id" on-delete="CASCADE" nullable="false"/>
            </join-columns>
        </many-to-one>
    </entity>
</doctrine-mapping>
