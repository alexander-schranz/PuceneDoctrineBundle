<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity repository-class="Pucene\Bundle\DoctrineBundle\Repository\DocumentRepository"
            name="Pucene\Bundle\DoctrineBundle\Entity\Document"
            table="pu_document">
        <id name="id" type="string" column="id">
            <generator strategy="NONE"/>
        </id>

        <field name="type" type="string" column="type" length="255" nullable="false"/>
        <field name="data" type="json" column="data" nullable="false"/>

        <one-to-many field="fields"
                     target-entity="Pucene\Bundle\DoctrineBundle\Entity\Field"
                     mapped-by="document">
            <cascade>
                <cascade-remove />
            </cascade>
        </one-to-many>

        <many-to-one field="index" target-entity="Pucene\Bundle\DoctrineBundle\Entity\Index">
            <join-columns>
                <join-column name="index_id" referenced-column-name="id" on-delete="CASCADE" nullable="false"/>
            </join-columns>
        </many-to-one>
    </entity>
</doctrine-mapping>
